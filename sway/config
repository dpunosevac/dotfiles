# ---[[ Variables
# Mod1 for Alt
set $mod Mod4
# Programm var
set $clipboard copyq
set $clipboard_show copyq show
set $menu wofi --show drun
set $network nm-applet --indicator
set $nightlight gammastep -l 39.2:-86.5 -t 5600:3500
set $notification dunst
set $screenshot flameshot launcher
set $term kitty
# External file var
set $wallpaper $HOME/dotfiles/pictures/2008-09-28_SingaporeGP_LH-Nord.jpg
# Key var
set $left h
set $down j
set $up k
set $right l
# Workspace var
set $ws1 "1:  "
set $ws2 "2:  "
set $ws3 "3:  "
set $ws4 "4:  "
set $ws5 "5:  "
set $ws6 "6:  "
set $ws7 "7"
set $ws8 "8:  "
set $ws9 "9:  "
set $ws10 "10:  "
# --]]

# ---[[ Swaybg, swayidle, swaylock, et sway built-in tools settings
output * bg $wallpaper fill
# Lock after 300 seconds, display off after another 300 seconds, exec swaylock before suspend
exec swayidle -w \
  timeout 300 'swaylock -i ~/dotfiles/pictures/2022-06-29_i3lock_solarsys-dracula.png' \
  timeout 600 'swaymsg "output * dpms off"' resume 'swaymsg "output * dpms on"' \
  before-sleep 'swaylock -i ~/dotfiles/pictures/2022-06-29_i3lock_solarsys-dracula.png'
# --]]

# ---[[ Hardware et System
#$bindsym $mod+Shift+b exec pkill -SIGUSR1 waybar
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +10%
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -10%
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle
# Use brightnessctl to adjust brightness with function row keys
bindsym XF86MonBrightnessUp exec --no-startup-id brightnessctl set +10%
bindsym XF86MonBrightnessDown exec --no-startup-id brightnessctl set 10%-
# Sway CapsLock and Ctrl
input "type:keyboard" {
  xkb_options ctrl:swapcaps
}
input "type:touchpad" {
  dwt enabled
  tap enabled
  natural_scroll enabled
  middle_emulation enabled
}
# --]]

# ---[[ WINDOW KEYBINDINGS
bindsym $mod+Return exec $term
bindsym $mod+Shift+q kill
# $mod+d has been reconfigured to launch rofi_mode
bindsym $mod+space exec --no-startup-id $menu
# change focus
bindsym $mod+$up focus left
bindsym $mod+$down focus down
bindsym $mod+$left focus up
bindsym $mod+$right focus right
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right
bindsym $mod+Shift+$up move left
bindsym $mod+Shift+$down move down
bindsym $mod+Shift+$left move up
bindsym $mod+Shift+$right move right
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right
# split in horizontal/vertical orientation
bindsym $mod+z split h
bindsym $mod+v split v
bindsym $mod+f fullscreen toggle
# change container layout
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split
# toggle tiling / floating
bindsym $mod+Shift+space floating toggle
# Press the mod key to move the floating window w/ mouse
floating_modifier $mod normal
# change focus between tiling / floating windows
#bindsym $mod+space focus mode_toggle
# focus the parent/child container
#bindsym $mod+a focus parent
#bindsym $mod+d focus child
# switch to workspace
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws10
bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9
bindsym $mod+Shift+0 move container to workspace number $ws10
bindsym $mod+Shift+minus move scratchpad
bindsym $mod+minus scratchpad show
# --]]

# ---[[ Custom keybindings
bindsym $mod+Shift+v exec --no-startup-id copyq show
bindsym $mod+Shift+s exec --no-startup-id $screenshot
# --]]

# ---[[ MODES
# rofi mode
set $rofi_mode ROFI MODE: (f) Filebrowser (c) Combi (k) Keys (r) Run (w) Window (esc) Exit
mode "$rofi_mode" {
  bindsym f exec --no-startup-id "rofi -modi filebrowser, -show filebrowser", mode "default"
  bindsym c exec --no-startup-id "rofi -modi combi, -show combi", mode "default"
  bindsym r exec --no-startup-id rofi -show run, mode "default"
  bindsym k exec --no-startup-id "rofi -modi keys, -show keys", mode "default"
  bindsym w exec --no-startup-id rofi -show window, mode "default"
  bindsym Escape mode "default"
}
bindsym $mod+d mode "$rofi_mode"
# Window resize mode
set $resize_mode RESIZE MODE: (hjkl, arrows) Resize (esc, return, super+r) Exit
mode "$resize_mode" {
  bindsym h resize shrink width 10 px or 10 ppt
  bindsym j resize grow height 10 px or 10 ppt
  bindsym k resize shrink height 10 px or 10 ppt
  bindsym l resize grow width 10 px or 10 ppt
  bindsym Left resize shrink width 10 px or 10 ppt
  bindsym Down resize grow height 10 px or 10 ppt
  bindsym Up resize shrink height 10 px or 10 ppt
  bindsym Right resize grow width 10 px or 10 ppt
  bindsym Escape mode "default"
  bindsym Return mode "default"
  bindsym $mod+r mode "default"
}
bindsym $mod+r mode "$resize_mode"
# System option mode
set $system_mode SYS MODE: (c) Config reload (e) Exit Sway (l) Lock (s) Suspend (shift+r) Reboot (shift+s) Shutdown (esc) Exit
mode "$system_mode" {
  bindsym c reload
  bindsym l exec --no-startup-id waylock -i ~/dotfiles/pictures/2022-06-29_i3lock_solarsys-dracula.png, mode "default"
  bindsym e exec "swaynag -t warning -m 'Exit Sway?' -B 'Sure' 'swaymsg exit'"
  bindsym s exec --no-startup-id systemctl suspend, mode "default"
  bindsym Shift+r exec "swaynag -t warning -m 'Reboot?' -B 'Sure' 'systemctl reboot'"
  bindsym Shift+s exec "swaynag -t warning -m 'Shutdown?' -B 'Sure' 'systemctl shutdown'"
  bindsym Escape mode "default"
}
bindsym $mod+Shift+c mode "$system_mode"
bindsym $mod+Shift+e mode "$system_mode"
# Passthrough mode
set $passthrough_mode PASSTHROUGH MODE: (esc) Exit
mode "$passthrough_mode" {
  bindsym Escape mode "default"
}
bindsym $mod+Shift+p mode "$passthrough_mode"
# --]]

