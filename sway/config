# ---[[ Variables
# Mod1 for Alt
set $mod Mod4
# Script var
set $lock swaylock -i ~/dotfiles/pictures/2022-06-29_i3lock_solarsys-dracula.png
set $suspend systemctl suspend
set $reboot systemctl reboot
set $shutdown systemctl shutdown
# Programm var
set $bar waybar
set $clipboard wl-paste -t text --watch clipman store
set $clipboard_clear clipman clear --all
set $clipboard_show kitty --class=clipboard clipman pick --print0 --tool=CUSTOM --tool-args="fzf --prompt 'pick > ' --bind 'tab:up' --cycle --read0"
for_window [app_id="^clipboard$"] floating enable, sticky enable, resize set 30 ppt 60 ppt, border pixel 10, move position 1300px 50px
set $menu kitty --class=launcher -e ~/dotfiles/sway/sway-launcher-desktop.sh
for_window [app_id="^launcher$"] floating enable, sticky enable, resize set 30 ppt 60 ppt, border pixel 10, move center
set $network nm-applet --indicator
set $nightlight gammastep -P -l 39.2:-86.5 -t 5600:3500
set $notification dunst
set $quicknote kitty --class=quicknote vim ~/Documents/sway_quicknote.txt
for_window [app_id="^quicknote$"] floating enable, sticky enable, resize set 30 ppt 60 ppt, move position 1300px 50px
set $screenshot grim -g "$(slurp)"
set $term kitty
# External file var
set $wallpaper $HOME/dotfiles/pictures/2020-11-15_TurkishGP_LH-Nord.jpeg
# Key var
set $left h
set $down j
set $up k
set $right l
# Workspace var
set $ws1 "1:  "
set $ws2 "2:  "
set $ws3 "3:  "
set $ws4 "4:  "
set $ws5 "5:  "
set $ws6 "6:  "
set $ws7 "7"
set $ws8 "8:  "
set $ws9 "9:  "
set $ws10 "10:  "
# --]]

# ---[[ Hardware et System
output * bg $wallpaper fill
# Lock after 300 seconds, display off after another 300 seconds, exec swaylock before suspend
exec swayidle -w \
  timeout 300 'swaylock -i ~/dotfiles/pictures/2022-06-29_i3lock_solarsys-dracula.png' \
  timeout 600 'swaymsg "output * dpms off"' resume 'swaymsg "output * dpms on"' \
  before-sleep '$lock'
#$bindsym $mod+Shift+b exec pkill -SIGUSR1 waybar
bindsym XF86AudioRaiseVolume exec pactl set-sink-volume @DEFAULT_SINK@ +10%
bindsym XF86AudioLowerVolume exec pactl set-sink-volume @DEFAULT_SINK@ -10%
bindsym XF86AudioMute exec pactl set-sink-mute @DEFAULT_SINK@ toggle
bindsym XF86AudioMicMute exec pactl set-source-mute @DEFAULT_SOURCE@ toggle
# Use brightnessctl to adjust brightness with function row keys
bindsym XF86MonBrightnessUp exec brightnessctl set +10%
bindsym XF86MonBrightnessDown exec brightnessctl set 10%-
# Sway CapsLock and Ctrl
input "type:keyboard" {
  xkb_options ctrl:swapcaps
}
input "type:touchpad" {
  dwt enabled
  tap enabled
  natural_scroll enabled
  middle_emulation enabled
}
bindsym $mod+Shift+z exec $clipboard_clear
bindsym $mod+Shift+v exec $clipboard_show
bindsym $mod+Shift+n exec $quicknote
bindsym $mod+Shift+s exec $screenshot
# --]]

# ---[[ WINDOW KEYBINDINGS
bindsym $mod+Return exec $term
bindsym $mod+Shift+q kill
bindsym $mod+d exec $menu
bindsym $mod+space exec $menu
# change focus
bindsym $mod+$left focus left
bindsym $mod+$down focus down
bindsym $mod+$up focus up
bindsym $mod+$right focus right
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right
bindsym $mod+Shift+$left move left
bindsym $mod+Shift+$down move down
bindsym $mod+Shift+$up move up
bindsym $mod+Shift+$right move right
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right
# split in horizontal/vertical orientation
bindsym $mod+z split h
bindsym $mod+v split v
bindsym $mod+f fullscreen toggle
# change container layout
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split
# toggle tiling / floating
bindsym $mod+Shift+space floating toggle
# Press the mod key to move the floating window w/ mouse
floating_modifier $mod normal
# change focus between tiling / floating windows
#bindsym $mod+space focus mode_toggle
# focus the parent/child container
#bindsym $mod+a focus parent
#bindsym $mod+d focus child
# switch to workspace
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws10
bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9
bindsym $mod+Shift+0 move container to workspace number $ws10
bindsym $mod+Shift+minus move scratchpad
bindsym $mod+minus scratchpad show
# --]]

# ---[[ MODES
# Window resize mode
set $resize_mode RESIZE MODE: (hjkl, arrows) Resize (esc, return, super+r) Exit
mode "$resize_mode" {
  bindsym h resize shrink width 10 px or 10 ppt
  bindsym j resize grow height 10 px or 10 ppt
  bindsym k resize shrink height 10 px or 10 ppt
  bindsym l resize grow width 10 px or 10 ppt
  bindsym Left resize shrink width 10 px or 10 ppt
  bindsym Down resize grow height 10 px or 10 ppt
  bindsym Up resize shrink height 10 px or 10 ppt
  bindsym Right resize grow width 10 px or 10 ppt
  bindsym Escape mode "default"
  bindsym Return mode "default"
  bindsym $mod+r mode "default"
}
bindsym $mod+r mode "$resize_mode"
# System option mode
set $system_mode SYS MODE: (c) Config reload (e) Exit Sway (l) Lock (s) Suspend (shift+r) Reboot (shift+s) Shutdown (esc) Exit
mode "$system_mode" {
  bindsym c reload
  bindsym l exec $lock, mode "default"
  bindsym e exec "swaynag -t warning -m 'Exit Sway?' -B 'Sure' 'swaymsg exit'"
  bindsym s exec $suspend, mode "default"
  bindsym Shift+r exec "swaynag -t warning -m 'Reboot?' -B 'Sure' '$reboot'"
  bindsym Shift+s exec "swaynag -t warning -m 'Shutdown?' -B 'Sure' '$shutdown'"
  bindsym Escape mode "default"
}
bindsym $mod+Shift+c mode "$system_mode"
bindsym $mod+Shift+e mode "$system_mode"
# Passthrough mode
set $passthrough_mode PASSTHROUGH MODE: (esc) Exit
mode "$passthrough_mode" {
  bindsym Escape mode "default"
}
bindsym $mod+Shift+p mode "$passthrough_mode"
# --]]

# ---[[ APPEARANCE
font pango:FantasqueSansMono Nerd Font 8
# class                 border  bground text    indicator child_border
client.focused          #6272A4 #6272A4 #F8F8F2 #6272A4   #6272A4
client.focused_inactive #44475A #44475A #F8F8F2 #44475A   #44475A
client.unfocused        #282A36 #282A36 #BFBFBF #282A36   #282A36
client.urgent           #44475A #FF5555 #F8F8F2 #FF5555   #FF5555
client.placeholder      #282A36 #282A36 #F8F8F2 #282A36   #282A36
client.background       #F8F8F2
default_border pixel
default_floating_border pixel
gaps inner 3
gaps outer 3
# --]]

# ---[[ Startup applications
exec $bar
exec $clipboard
exec $network
exec $nightlight
exec $notification
# --]]

