#!/bin/zsh

# Custom trash function
trash () {
  if [ ! -d "$HOME/trash_zsh/" ]
  then
    mkdir $HOME/trash_zsh/
  fi
  mv "$1" $HOME/trash_zsh/
  echo "$1" moved to trash!
}

trash_empty() {
  if [ ! -d "$HOME/trash_zsh/" ]
  then
    echo "Trash folder does not exist!"
  else
    rm -r $HOME/trash_zsh/
    mkdir $HOME/trash_zsh/
    echo "Trash folder emptied!"
  fi
}

# Tar.gz
tarMake() {
  tar -czvf "$1.tgz" "$1" # c for archive, z for gzip compression, -verbose, -f for output
}

tarUnmake() {
  tar -xvf "$1"
}

######### Alias w hard-coded paths ##########
CACHE="~/Nextcloud/l1-cache/"
DAILY_WRITING_FOLDER="~/Nextcloud/dw-$(date +'%Y')/"
DOTFILES_FOLDER="~/dotfiles/"
QUICK_NOTES_PATH="$CACHE""quick_notes.md"
WIKI_PATH="~/Nextcloud/theo-vimwiki/"
alias l1="cd $CACHE"
alias cache="cd $CACHE"
alias dw="vim $DAILY_WRITING_FOLDER""index.md"
alias dot="cd $DOTFILES_FOLDER"
alias dotfiles="cd $DOTFILES_FOLDER"
alias note="nvim $QUICK_NOTES_PATH"
alias notes="nvim $QUICK_NOTES_PATH"
alias wiki="vim $WIKI_PATH""index.md"

######### Alias ##########
alias cl="clear"
# Any $ commands in double quotes will be substituted in the startup and will be executed. So use single quotes
alias cdfzf='cd $(fzf --height 40% --reverse)'
alias google="w3m google.com"
alias ls="ls -G"
alias l="ls -l -a"
alias nvi="nvim"
alias nvif="fd --type f --hidden --exclude .git | fzf-tmux --height 40% --reverse -p | xargs nvim"

